<script>
document.addEventListener('DOMContentLoaded', function() {
  const guestSelector = document.getElementById('guest-selector');
  const guestDropdown = document.getElementById('guest-dropdown');
  const bookingForm = document.getElementById('booking-form');
  const checkinInput = document.getElementById('checkin');
  const checkoutInput = document.getElementById('checkout');
  const pricingBreakdown = document.getElementById('pricing-breakdown');
  const couponToggle = document.getElementById('coupon-toggle');
  const couponContainer = document.getElementById('coupon-input-container');
  
  // Guest counts
  let adults = 1, children = 0, infants = 0, pets = 0;
  
  // Toggle guest dropdown
  guestSelector.addEventListener('click', function(e) {
    e.stopPropagation();
    guestDropdown.style.display = guestDropdown.style.display === 'none' ? 'block' : 'none';
  });
  
  // Close dropdown when clicking outside
  document.addEventListener('click', function() {
    guestDropdown.style.display = 'none';
  });
  
  // Guest count controls
  function updateGuestCounts() {
    document.getElementById('adults-count').textContent = adults;
    document.getElementById('children-count').textContent = children;
    document.getElementById('infants-count').textContent = infants;
    document.getElementById('pets-count').textContent = pets;
    
    const total = adults + children + infants;
    document.getElementById('guest-count').textContent = 
      total === 1 ? '1 guest' : `${total} guests`;
    
    // Update hidden inputs
    document.getElementById('adults-input').value = adults;
    document.getElementById('children-input').value = children;
    document.getElementById('infants-input').value = infants;
    document.getElementById('pets-input').value = pets;
  }
  
  // Adults controls
  document.getElementById('adults-plus').addEventListener('click', function() {
    if (adults < 16) adults++;
    updateGuestCounts();
  });
  
  document.getElementById('adults-minus').addEventListener('click', function() {
    if (adults > 1) adults--;
    updateGuestCounts();
  });
  
  // Children controls
  document.getElementById('children-plus').addEventListener('click', function() {
    if (children < 5) children++;
    updateGuestCounts();
  });
  
  document.getElementById('children-minus').addEventListener('click', function() {
    if (children > 0) children--;
    updateGuestCounts();
  });
  
  // Infants controls
  document.getElementById('infants-plus').addEventListener('click', function() {
    if (infants < 5) infants++;
    updateGuestCounts();
  });
  
  document.getElementById('infants-minus').addEventListener('click', function() {
    if (infants > 0) infants--;
    updateGuestCounts();
  });
  
  // Pets controls
  document.getElementById('pets-plus').addEventListener('click', function() {
    if (pets < 2) pets++;
    updateGuestCounts();
  });
  
  document.getElementById('pets-minus').addEventListener('click', function() {
    if (pets > 0) pets--;
    updateGuestCounts();
  });
  
  // Date change handler
  function updatePricing() {
    const checkin = new Date(checkinInput.value);
    const checkout = new Date(checkoutInput.value);
    
    if (checkin && checkout && checkout > checkin) {
      const nights = Math.ceil((checkout - checkin) / (1000 * 60 * 60 * 24));
      const basePrice = <%= listing.price %> * nights;
      const cleaningFee = 500;
      const serviceFee = 200;
      const taxes = Math.round(basePrice * 0.18);
      const total = basePrice + cleaningFee + serviceFee + taxes;
      
      document.getElementById('nights-display').textContent = nights;
      document.getElementById('base-price').textContent = `₹${basePrice.toLocaleString('en-IN')}`;
      document.getElementById('cleaning-fee').textContent = `₹${cleaningFee}`;
      document.getElementById('service-fee').textContent = `₹${serviceFee}`;
      document.getElementById('taxes').textContent = `₹${taxes.toLocaleString('en-IN')}`;
      document.getElementById('total-price').textContent = `₹${total.toLocaleString('en-IN')}`;
      
      pricingBreakdown.style.display = 'block';
    } else {
      pricingBreakdown.style.display = 'none';
    }
  }
  
  checkinInput.addEventListener('change', updatePricing);
  checkoutInput.addEventListener('change', updatePricing);
  
  // Coupon toggle
  couponToggle.addEventListener('click', function() {
    couponContainer.style.display = couponContainer.style.display === 'none' ? 'flex' : 'none';
  });
  
  // Coupon apply - just update pricing without form submission
  const couponApplyBtn = document.getElementById('coupon-apply-btn');
  const couponCodeInput = document.getElementById('couponCode');
  const couponFeedback = document.getElementById('coupon-feedback');
  let appliedDiscount = 0;
  let appliedCouponCode = '';
  
  couponApplyBtn.addEventListener('click', async function(e) {
    e.preventDefault();
    e.stopPropagation();
    
    const code = couponCodeInput.value.trim().toUpperCase();
    if (!code) {
      couponFeedback.textContent = 'Please enter a coupon code';
      couponFeedback.className = 'coupon-feedback error';
      return;
    }
    
    // Validate dates first
    const checkin = new Date(checkinInput.value);
    const checkout = new Date(checkoutInput.value);
    
    if (!checkinInput.value || !checkoutInput.value || checkout <= checkin) {
      couponFeedback.textContent = 'Please select valid check-in and check-out dates first';
      couponFeedback.className = 'coupon-feedback error';
      return;
    }
    
    try {
      // Fetch coupon validation from server
      const response = await fetch(`/api/coupon/validate?code=${encodeURIComponent(code)}`);
      const data = await response.json();
      
      if (data.valid && data.coupon) {
        const nights = Math.ceil((checkout - checkin) / (1000 * 60 * 60 * 24));
        const basePrice = <%= listing.price %> * nights;
        let discount = 0;
        
        if (data.coupon.discountType === 'percent') {
          discount = Math.min(basePrice, (basePrice * data.coupon.amount) / 100);
        } else {
          discount = Math.min(basePrice, data.coupon.amount);
        }
        
        appliedDiscount = discount;
        appliedCouponCode = code;
        
        // Update pricing breakdown with discount
        updatePricingWithCoupon(discount);
        
        couponFeedback.textContent = `✓ Coupon "${code}" applied! You saved ₹${discount.toLocaleString('en-IN')}`;
        couponFeedback.className = 'coupon-feedback success';
        
        // Hide coupon input after successful apply
        couponContainer.style.display = 'none';
      } else {
        appliedDiscount = 0;
        appliedCouponCode = '';
        couponFeedback.textContent = data.message || 'Invalid or expired coupon code';
        couponFeedback.className = 'coupon-feedback error';
        updatePricingWithCoupon(0);
      }
    } catch (error) {
      couponFeedback.textContent = 'Error validating coupon. Please try again.';
      couponFeedback.className = 'coupon-feedback error';
      console.error('Coupon validation error:', error);
    }
  });
  
  // Update pricing with coupon discount
  function updatePricingWithCoupon(discount = appliedDiscount) {
    const checkin = new Date(checkinInput.value);
    const checkout = new Date(checkoutInput.value);
    
    if (checkin && checkout && checkout > checkin) {
      const nights = Math.ceil((checkout - checkin) / (1000 * 60 * 60 * 24));
      const basePrice = <%= listing.price %> * nights;
      const cleaningFee = 500;
      const serviceFee = 200;
      const taxes = Math.round(Math.max(0, (basePrice - discount)) * 0.18);
      const total = Math.max(0, basePrice - discount) + cleaningFee + serviceFee + taxes;
      
      document.getElementById('nights-display').textContent = nights;
      document.getElementById('base-price').textContent = `₹${basePrice.toLocaleString('en-IN')}`;
      
      // Show discount line if coupon is applied
      let discountLine = document.getElementById('discount-line');
      if (discount > 0) {
        if (!discountLine) {
          const pricingBreakdown = document.getElementById('pricing-breakdown');
          const cleaningLine = document.querySelector('.pricing-line:nth-of-type(2)');
          discountLine = document.createElement('div');
          discountLine.className = 'pricing-line';
          discountLine.id = 'discount-line';
          discountLine.innerHTML = `
            <span style="color: #28a745;"><i class="fa-solid fa-tag me-1"></i>Coupon Discount</span>
            <span style="color: #28a745;">-₹<span id="discount-amount">0</span></span>
          `;
          pricingBreakdown.insertBefore(discountLine, cleaningLine);
        }
        document.getElementById('discount-amount').textContent = discount.toLocaleString('en-IN');
        discountLine.style.display = 'flex';
      } else if (discountLine) {
        discountLine.style.display = 'none';
      }
      
      document.getElementById('cleaning-fee').textContent = `₹${cleaningFee}`;
      document.getElementById('service-fee').textContent = `₹${serviceFee}`;
      document.getElementById('taxes').textContent = `₹${taxes.toLocaleString('en-IN')}`;
      document.getElementById('total-price').textContent = `₹${total.toLocaleString('en-IN')}`;
      
      pricingBreakdown.style.display = 'block';
      
      // Update hidden coupon input
      if (discount > 0) {
        if (!document.getElementById('couponCode-hidden')) {
          const hiddenInput = document.createElement('input');
          hiddenInput.type = 'hidden';
          hiddenInput.id = 'couponCode-hidden';
          hiddenInput.name = 'couponCode';
          bookingForm.appendChild(hiddenInput);
        }
        document.getElementById('couponCode-hidden').value = appliedCouponCode;
      } else {
        const hiddenInput = document.getElementById('couponCode-hidden');
        if (hiddenInput) hiddenInput.value = '';
      }
    }
  }
  
  // Update pricing when dates change (remove coupon if dates change)
  const originalUpdatePricing = updatePricing;
  updatePricing = function() {
    originalUpdatePricing();
    if (appliedDiscount > 0) {
      updatePricingWithCoupon(appliedDiscount);
    }
  };
  
  // Set minimum date to today
  const today = new Date().toISOString().split('T')[0];
  checkinInput.min = today;
  checkoutInput.min = today;
  
  // Coupon suggestions (fetch and render list)
  (async function loadCouponSuggestions(){
    try {
      const r = await fetch('/api/coupon/suggestions');
      const d = await r.json();
      if (d && d.success && Array.isArray(d.coupons) && d.coupons.length){
        const box = document.getElementById('coupon-suggestions');
        const pills = d.coupons.slice(0,3).map(c => {
          const label = c.discountType === 'percent' ? `${c.amount}% off` : `₹${c.amount} off`;
          return `<button type="button" class="btn btn-sm btn-outline-secondary me-2 mb-2" data-code="${c.code}">${c.code} — ${label}</button>`;
        }).join('');
        box.innerHTML = `<div class="small text-muted mb-1">Coupons you may like:</div>${pills}`;
        box.style.display = 'block';
        box.querySelectorAll('button[data-code]').forEach(btn => btn.addEventListener('click', () => {
          couponContainer.style.display = 'flex';
          couponCodeInput.value = btn.getAttribute('data-code');
          couponApplyBtn.click();
        }));
      }
    } catch(_) {}
  })();

  // Initialize
  updateGuestCounts();
});
</script>
