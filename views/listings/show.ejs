<% layout("/layouts/boilerplate") %>
<style>
  form {
  /* background-color: #fdfdfd; */
  border-radius: 12px;
  max-width: 500px;
  margin: auto;
}

form label {
  font-weight: 500;
}

form p {
  margin-bottom: 0.5rem;
}

</style>
<div class="container-fluid mt-4">
  <div class="row">
    <!-- Main Content -->
    <div class="col-lg-8">
      <div class="listing-details">
        <h1 class="listing-title"><%= listing.title %></h1>
        
        <!-- Image Gallery -->
        <div class="image-gallery mb-4">
          <img src="<%= listing.image.url %>" class="main-image" alt="<%= listing.title %>">
        </div>
        
        <!-- Listing Info -->
        <div class="listing-info">
          <div class="host-info mb-4">
            <div class="host-avatar">
              <i class="fa-solid fa-user"></i>
            </div>
            <div class="host-details">
              <div class="host-name">Hosted by <%= listing.owner.username %></div>
              <div class="host-response-time">Responds within an hour</div>
            </div>
          </div>
          
          <div class="listing-description mb-4">
            <h3>About this place</h3>
            <p><%= listing.description %></p>
          </div>
          
          <div class="listing-amenities mb-4">
            <h3>What this place offers</h3>
            <div class="amenities-grid">
              <div class="amenity-item">
                <i class="fa-solid fa-wifi"></i>
                <span>Wifi</span>
              </div>
              <div class="amenity-item">
                <i class="fa-solid fa-car"></i>
                <span>Free parking</span>
              </div>
              <div class="amenity-item">
                <i class="fa-solid fa-snowflake"></i>
                <span>Air conditioning</span>
              </div>
              <div class="amenity-item">
                <i class="fa-solid fa-tv"></i>
                <span>TV</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Booking Widget -->
    <div class="col-lg-4">
      <% 
        // Check if user is owner - handle both populated and non-populated owner
        let isOwner = false;
        if (currUser && listing.owner) {
          const ownerId = listing.owner._id ? listing.owner._id.toString() : listing.owner.toString();
          const userId = currUser._id ? currUser._id.toString() : currUser.toString();
          isOwner = ownerId === userId;
        }
      %>
      
      <% if (!currUser) { %>
        <!-- Show login prompt for guests -->
        <div class="login-prompt">
          <h4>Ready to book?</h4>
          <p>Sign in to make a reservation</p>
          <div class="d-grid gap-2">
            <a href="/login" class="btn btn-primary">Sign in</a>
            <a href="/signup" class="btn btn-outline-primary">Sign up</a>
          </div>
        </div>
      <% } else if (isOwner && currUser.role !== 'admin') { %>
        <!-- Owner viewing their own listing - show info message -->
        <div class="host-actions">
          <h4>Your listing</h4>
          <p class="text-muted">Manage your listing from the options at the bottom of this page.</p>
          <div class="mt-3">
            <div class="price-display">
              <span class="price-amount-large">₹<%= listing.price.toLocaleString("en-IN") %></span>
              <span class="price-period-small">per night</span>
            </div>
          </div>
        </div>
      <% } else { %>
        <!-- Show booking widget for logged-in non-owners -->
        <% try { %>
          <%- include('../includes/booking-widget', { listing: listing, currUser: currUser }) %>
        <% } catch(e) { %>
          <div class="alert alert-warning">
            <p>Booking widget temporarily unavailable. Please try again later.</p>
            <p class="small text-muted">Error: <%= e.message %></p>
          </div>
        <% } %>
      <% } %>
    </div>
  </div>
</div>

<!-- Similar Listings -->
<% if (recommendations && recommendations.length > 0) { %>
<div class="container-fluid mt-5">
  <h3 class="mb-3">Similar places you may like</h3>
  <div class="row g-4">
    <% recommendations.forEach(sim => { %>
      <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
        <div class="card h-100 shadow-sm similar-card">
          <a href="/listings/<%= sim._id %>" class="text-decoration-none text-dark">
            <div class="ratio ratio-4x3">
              <img src="<%= (sim.image && sim.image.url) ? sim.image.url : 'https://via.placeholder.com/600x400?text=Listing' %>" class="card-img-top object-fit-cover" alt="<%= sim.title %>">
            </div>
            <div class="card-body">
              <h5 class="card-title text-truncate mb-1"><%= sim.title %></h5>
              <p class="card-text text-muted mb-2 text-truncate"><i class="fa-solid fa-location-dot me-1"></i><%= sim.location %>, <%= sim.country %></p>
              <div class="d-flex align-items-center justify-content-between">
                <span class="fw-semibold">₹<%= sim.price %><span class="text-muted fw-normal">/night</span></span>
                <span class="badge bg-light text-dark">Similar</span>
              </div>
            </div>
          </a>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<style>
.similar-card .card-img-top {
  object-fit: cover;
}
.similar-card .card-body {
  padding: 12px 14px;
}
.similar-card .card-title {
  font-size: 16px;
  font-weight: 600;
}
@media (max-width: 576px) {
  .similar-card .card-title { font-size: 15px; }
}
</style>
<% } %>

<style>
.listing-title {
  font-size: 26px;
  font-weight: 600;
  margin-bottom: 8px;
  color: #222;
}

.image-gallery {
  border-radius: 12px;
  overflow: hidden;
}

.main-image {
