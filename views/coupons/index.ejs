<% layout('layouts/boilerplate') %>
<div class="container mt-4">
  <h2>Coupons</h2>
  <form action="/coupons" method="POST" class="row g-2 mb-4">
    <div class="col-md-2"><input name="code" class="form-control" placeholder="CODE" required></div>
    <div class="col-md-2">
      <select name="discountType" class="form-select" required>
        <option value="percent">Percent</option>
        <option value="fixed">Fixed</option>
      </select>
    </div>
    <div class="col-md-2"><input name="amount" type="number" step="0.01" min="0" class="form-control" placeholder="Amount" required></div>
    <div class="col-md-3"><input name="expiresAt" type="date" class="form-control" required></div>
    <div class="col-md-2"><input name="maxUses" type="number" min="0" class="form-control" placeholder="Max Uses (0=∞)"></div>
    <div class="col-md-1"><button class="btn btn-primary w-100" type="submit">Add</button></div>
  </form>

  <table class="table table-striped align-middle">
    <thead>
      <tr>
        <th>Code</th>
        <th>Type</th>
        <th>Amount</th>
        <th>Uses</th>
        <th>Expires</th>
        <th>Status</th>
        <th class="text-end">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% coupons.forEach(c => { %>
        <tr>
          <td><%= c.code %></td>
          <td><%= c.discountType %></td>
          <td><%= c.amount %></td>
          <td><%= c.uses %> / <%= c.maxUses || '∞' %></td>
          <td><%= moment(c.expiresAt).format('YYYY-MM-DD') %></td>
          <td><span class="badge <%= c.isActive ? 'bg-success' : 'bg-secondary' %>"><%= c.isActive ? 'Active' : 'Inactive' %></span></td>
          <td class="text-end">
            <form action="/coupons/<%= c._id %>/toggle" method="POST" class="d-inline">
              <button class="btn btn-sm <%= c.isActive ? 'btn-warning' : 'btn-success' %>"><%= c.isActive ? 'Disable' : 'Enable' %></button>
            </form>
            <form action="/coupons/<%= c._id %>?_method=DELETE" method="POST" class="d-inline ms-1" onsubmit="return confirm('Delete coupon <%= c.code %>?')">
              <button class="btn btn-sm btn-outline-danger">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>


