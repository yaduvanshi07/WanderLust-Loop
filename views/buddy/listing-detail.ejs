<% layout('layouts/boilerplate') %>

<style>
  body {
    background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
    min-height: 100vh;
  }
  
  .listing-detail-container {
    animation: fadeInUp 0.6s ease-out;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .listing-card {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    border: 1px solid rgba(255,255,255,0.3);
    box-shadow: 0 10px 40px rgba(0,0,0,0.1);
    overflow: hidden;
  }
  
  .listing-header {
    background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
    color: white;
    padding: 2rem;
  }
  
  .info-item {
    padding: 0.75rem 0;
    border-bottom: 1px solid rgba(0,0,0,0.05);
    transition: all 0.3s ease;
  }
  
  .info-item:hover {
    background: rgba(17, 153, 142, 0.05);
    padding-left: 1rem;
    border-radius: 8px;
  }
  
  .interest-badge {
    background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 500;
    margin: 0.25rem;
    display: inline-block;
    transition: all 0.3s ease;
  }
  
  .interest-badge:hover {
    transform: scale(1.1);
    box-shadow: 0 4px 15px rgba(17, 153, 142, 0.5);
  }
  
  .btn-primary {
    background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
    border: none;
    border-radius: 12px;
    padding: 0.75rem 2rem;
    font-weight: 600;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(17, 153, 142, 0.4);
  }
  
  .btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(17, 153, 142, 0.6);
    color: white;
  }
  
  .request-form-card {
    background: rgba(17, 153, 142, 0.05);
    border: 2px dashed #11998e;
    border-radius: 15px;
    padding: 2rem;
    margin-top: 1rem;
  }
  
  .form-control {
    border-radius: 12px;
    border: 2px solid #e0e0e0;
    padding: 0.75rem 1rem;
    transition: all 0.3s ease;
  }
  
  .form-control:focus {
    border-color: #11998e;
    box-shadow: 0 0 0 0.2rem rgba(17, 153, 142, 0.25);
    transform: translateY(-2px);
  }
</style>

<div class="container mt-4 listing-detail-container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="listing-card">
                <div class="listing-header">
                    <h3 class="mb-0 fw-bold"><%= listing.title %></h3>
                </div>
                <div class="card-body p-4">
                    <div class="mb-4">
                        <div class="info-item">
                            <i class="fa-solid fa-user me-2 text-primary"></i>
                            <strong>Created by:</strong> <%= listing.creator.username %>
                        </div>
                        <div class="info-item">
                            <i class="fa-solid fa-map-marker-alt me-2 text-primary"></i>
                            <strong>Destination:</strong> <span class="text-primary fw-bold"><%= listing.destination %></span>
                        </div>
                        <div class="info-item">
                            <i class="fa-solid fa-calendar me-2 text-info"></i>
                            <strong>Dates:</strong> 
                            <%= new Date(listing.startDate).toLocaleDateString() %> - 
                            <%= new Date(listing.endDate).toLocaleDateString() %>
                        </div>
                        <div class="info-item">
                            <i class="fa-solid fa-users me-2 text-success"></i>
                            <strong>Looking for:</strong> <span class="text-capitalize"><%= listing.lookingFor.replace('-', ' ') %></span>
                        </div>
                        <div class="info-item">
                            <i class="fa-solid fa-user-plus me-2 text-warning"></i>
                            <strong>Max Partners:</strong> <%= listing.maxPartners %>
                        </div>
                    </div>

                    <div class="mb-3">
                        <h5>Description</h5>
                        <p><%= listing.bio %></p>
                    </div>

                    <% if (listing.interests && listing.interests.length > 0) { %>
                        <div class="mb-4">
                            <h5 class="mb-3"><i class="fa-solid fa-tags me-2"></i>Interests</h5>
                            <div>
                                <% listing.interests.forEach(interest => { %>
                                    <span class="interest-badge"><%= interest %></span>
                                <% }) %>
                            </div>
                        </div>
                    <% } %>

                    <div class="mb-3">
                        <p><strong>Travel Style:</strong> <%= listing.travelStyle %></p>
                        <p><strong>Accommodation:</strong> <%= listing.accommodationType.replace('-', ' ') %></p>
                        <p><strong>Budget:</strong> ₹<%= listing.budgetPerPerson.min %> - ₹<%= listing.budgetPerPerson.max %></p>
                    </div>

                    <% if (listing.acceptedPartners && listing.acceptedPartners.length > 0) { %>
                        <div class="mb-3">
                            <h5>Accepted Partners</h5>
                            <% listing.acceptedPartners.forEach(partner => { %>
                                <span class="badge bg-success me-1"><%= partner.username %></span>
                            <% }) %>
                        </div>
                    <% } %>

                    <% if (listing.creator._id.toString() === currUser._id.toString()) { %>
                        <div class="alert alert-info">
                            <i class="fa-solid fa-info-circle me-2"></i>
                            This is your listing. You can view requests in the Requests section.
                        </div>
                        <a href="/buddy/requests" class="btn btn-primary">View Requests</a>
                    <% } else { %>
                        <% if (existingRequest) { %>
                            <div class="alert alert-warning">
                                <i class="fa-solid fa-clock me-2"></i>
                                You have already sent a request for this listing.
                                <br>
                                <strong>Status:</strong> <%= existingRequest.status %>
                            </div>
                            <a href="/buddy/requests" class="btn btn-outline-primary">View My Requests</a>
                        <% } else { %>
                            <div class="request-form-card">
                                <h5 class="mb-3"><i class="fa-solid fa-paper-plane me-2"></i>Send Request</h5>
                                <form method="POST" action="/buddy/listings/<%= listing._id %>/request">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Message</label>
                                        <textarea class="form-control" name="message" rows="4" 
                                                  placeholder="Introduce yourself and why you're interested..."></textarea>
                                    </div>
                                    <button type="submit" class="btn btn-primary w-100">
                                        <i class="fa-solid fa-paper-plane me-2"></i>Send Request
                                    </button>
                                </form>
                            </div>
                        <% } %>
                    <% } %>

                    <div class="mt-3">
                        <a href="/buddy/listings" class="btn btn-outline-secondary">
                            <i class="fa-solid fa-arrow-left me-2"></i>Back to Listings
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

