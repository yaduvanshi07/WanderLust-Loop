    align-self: flex-start;
  }
}
</style>

<!-- Owner/Analytics Actions Section (Before Footer) -->
<% if (currUser && listing.owner && listing.owner._id && (listing.owner._id.toString() === currUser._id.toString() || currUser.role === 'admin')) { %>
<div class="container-fluid mt-5 mb-4">
  <div class="row">
    <div class="col-12">
      <div class="owner-actions-section">
        <div class="p-4 border rounded-3 bg-light">
          <div class="d-flex align-items-center justify-content-between flex-wrap gap-3 mb-3">
            <div>
              <h5 class="mb-1">
                <i class="fa-solid fa-toolbox me-2"></i>
                <% if (listing.owner && listing.owner._id && currUser && currUser._id && (listing.owner._id.toString() === currUser._id.toString())) { %>
                  Manage Your Listing
                <% } else { %>
                  Admin Actions
                <% } %>
              </h5>
              <p class="text-muted mb-0 small">
                <% if (listing.owner && listing.owner._id && currUser && currUser._id && (listing.owner._id.toString() === currUser._id.toString())) { %>
                  Quick actions for this listing
                <% } else { %>
                  Administrative access to this listing
                <% } %>
              </p>
            </div>
          </div>

          <div class="row g-3">
            <% if ((listing.owner && listing.owner._id && currUser && currUser._id && (listing.owner._id.toString() === currUser._id.toString())) || (currUser && currUser.role === 'admin')) { %>
            <div class="col-12 col-sm-6 col-lg-4">
              <a href="/listings/<%= listing._id %>/edit" class="action-tile text-decoration-none d-block h-100">
                <div class="tile-inner h-100 d-flex align-items-center p-3 border rounded-3 bg-white">
                  <div class="tile-icon me-3">
                    <div class="icon-circle bg-primary-subtle text-primary">
                      <i class="fa-solid fa-edit"></i>
                    </div>
                  </div>
                  <div class="tile-content">
                    <div class="tile-title">Edit Listing</div>
                    <div class="tile-subtitle">Update photos, price, details</div>
                  </div>
                </div>
              </a>
            </div>
            <% } %>

            <% if ((listing.owner && listing.owner._id && currUser && currUser._id && (listing.owner._id.toString() === currUser._id.toString())) || (currUser && currUser.role === 'admin')) { %>
            <div class="col-12 col-sm-6 col-lg-4">
              <a href="/listings/<%= listing._id %>/analytics" class="action-tile text-decoration-none d-block h-100">
                <div class="tile-inner analytics h-100 d-flex align-items-center p-3 border rounded-3">
                  <div class="tile-icon me-3">
                    <div class="icon-circle gradient-analytics text-white">
                      <i class="fa-solid fa-chart-line"></i>
                    </div>
                  </div>
                  <div class="tile-content text-white">
                    <div class="tile-title">View Analytics</div>
                    <div class="tile-subtitle opacity-75">Traffic, revenue, reviews</div>
                  </div>
                </div>
              </a>
            </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

