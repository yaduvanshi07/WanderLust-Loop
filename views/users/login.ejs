<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Login: Look at the WanderLust</h1>
<div class="col-6 offset-3">
    <form action="/login" method="POST" class="needs-validation" novalidate>

        <div class="mb-3">
            <label for="username" class="form-label">username:</label>
            <input name="username" id="username" type="text" class="form-control" required>
            <div class="valid-feedback"> Looks good!</div>
        </div>

       
        
        <div class="mb-3">
            <label for="password" class="form-label">Password:</label>
            <input name="password" id="password" type="password" class="form-control" required>
            
        </div>
        <div class="mb-3">
            <label for="adminHintVerify" class="form-label">Admin Personal Hint (admins only)</label>
            <input name="adminHintVerify" id="adminHintVerify" type="text" class="form-control" placeholder="Enter your admin hint">
            <div class="form-text">Required if your account is admin.</div>
        </div>
        <button class="btn btn-success">Login</button>
        
    </form> 
</div>
    </div>
