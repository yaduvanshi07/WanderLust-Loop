<!-- Airbnb-style Booking Widget -->
<div class="booking-widget-container">
  <div class="booking-widget">
    <div class="booking-widget-header">
      <h5><i class="fa-solid fa-calendar-check me-2"></i>Book Your Stay</h5>
    </div>
    <div class="price-section">
      <div class="price-row">
        <span class="price-amount">₹<%= listing.price.toLocaleString("en-IN") %></span>
        <span class="price-period">per night</span>
      </div>
      <div class="rating-section">
        <% 
          // Calculate real rating and review count from MongoDB
          const approvedReviews = listing.reviews ? listing.reviews.filter(r => r.status === "approved" || !r.status) : [];
          const totalReviews = approvedReviews.length;
          const avgRating = totalReviews > 0 
            ? (approvedReviews.reduce((sum, r) => sum + (r.rating || 0), 0) / totalReviews).toFixed(1)
            : 0;
          const ratingNum = parseFloat(avgRating);
          const fullStars = Math.floor(ratingNum);
          const hasHalfStar = ratingNum % 1 >= 0.5;
        %>
        <div class="stars">
          <% for (let i = 1; i <= 5; i++) { %>
            <% if (i <= fullStars) { %>
              <i class="fa-solid fa-star filled"></i>
            <% } else if (i === fullStars + 1 && hasHalfStar) { %>
              <i class="fa-solid fa-star-half-stroke filled"></i>
            <% } else { %>
              <i class="fa-regular fa-star empty"></i>
            <% } %>
          <% } %>
        </div>
        <span class="rating-text">
          <% if (totalReviews > 0) { %>
            <%= avgRating %> · <%= totalReviews %> <%= totalReviews === 1 ? 'review' : 'reviews' %>
          <% } else { %>
            New listing
          <% } %>
        </span>
      </div>
    </div>

    <form id="booking-form" class="booking-form" action="/bookings/<%= listing._id || listing.id %>" method="POST">
      <!-- Date Selection -->
      <div class="date-section">
        <div class="date-input-group">
          <div class="date-input-container">
            <label for="checkin" class="date-label">CHECK-IN</label>
            <input type="date" id="checkin" name="checkin" class="date-input" required>
          </div>
          <div class="date-input-container">
            <label for="checkout" class="date-label">CHECKOUT</label>
            <input type="date" id="checkout" name="checkout" class="date-input" required>
          </div>
        </div>
      </div>

      <!-- Guest Selection -->
      <div class="guest-section">
        <button type="button" class="guest-selector" id="guest-selector">
          <div class="guest-info">
            <span class="guest-label">GUESTS</span>
            <span class="guest-count" id="guest-count">1 guest</span>
          </div>
          <i class="fa-solid fa-chevron-down"></i>
        </button>
        
        <!-- Guest Dropdown -->
        <div class="guest-dropdown" id="guest-dropdown" style="display: none;">
          <div class="guest-option">
            <div class="guest-option-info">
              <span class="guest-option-label">Adults</span>
              <span class="guest-option-desc">Ages 13 or above</span>
            </div>
            <div class="guest-option-controls">
              <button type="button" class="guest-btn" id="adults-minus">-</button>
              <span class="guest-count-display" id="adults-count">1</span>
              <button type="button" class="guest-btn" id="adults-plus">+</button>
            </div>
          </div>
          
          <div class="guest-option">
            <div class="guest-option-info">
              <span class="guest-option-label">Children</span>
              <span class="guest-option-desc">Ages 2-12</span>
            </div>
            <div class="guest-option-controls">
              <button type="button" class="guest-btn" id="children-minus">-</button>
              <span class="guest-count-display" id="children-count">0</span>
              <button type="button" class="guest-btn" id="children-plus">+</button>
            </div>
          </div>
          
          <div class="guest-option">
            <div class="guest-option-info">
              <span class="guest-option-label">Infants</span>
              <span class="guest-option-desc">Under 2</span>
            </div>
            <div class="guest-option-controls">
              <button type="button" class="guest-btn" id="infants-minus">-</button>
              <span class="guest-count-display" id="infants-count">0</span>
              <button type="button" class="guest-btn" id="infants-plus">+</button>
            </div>
          </div>
          
          <div class="guest-option">
            <div class="guest-option-info">
              <span class="guest-option-label">Pets</span>
              <span class="guest-option-desc">Bringing a service animal?</span>
            </div>
            <div class="guest-option-controls">
              <button type="button" class="guest-btn" id="pets-minus">-</button>
              <span class="guest-count-display" id="pets-count">0</span>
              <button type="button" class="guest-btn" id="pets-plus">+</button>
            </div>
          </div>
        </div>
      </div>

      <!-- Hidden inputs for guest counts -->
      <input type="hidden" name="guests[adults]" id="adults-input" value="1">
      <input type="hidden" name="guests[children]" id="children-input" value="0">
      <input type="hidden" name="guests[infants]" id="infants-input" value="0">
      <input type="hidden" name="guests[pets]" id="pets-input" value="0">

      <!-- Special Requests -->
      <div class="special-requests">
        <textarea 
          name="specialRequests" 
          placeholder="Tell the host about your trip..." 
          class="special-requests-input"
          maxlength="500"
        ></textarea>
      </div>

      <!-- Booking Button -->
      <button type="submit" class="booking-button" id="booking-button">
        <span id="booking-button-text">Reserve</span>
      </button>

      <!-- Pricing Breakdown -->
      <div class="pricing-breakdown" id="pricing-breakdown" style="display: none;">
        <div class="pricing-line">
          <span>₹<%= listing.price.toLocaleString("en-IN") %> × <span id="nights-display">1</span> nights</span>
          <span id="base-price">₹<%= listing.price.toLocaleString("en-IN") %></span>
        </div>
        <div class="pricing-line">
          <span>Cleaning fee</span>
          <span id="cleaning-fee">₹500</span>
        </div>
        <div class="pricing-line">
          <span>Service fee</span>
          <span id="service-fee">₹200</span>
        </div>
        <div class="pricing-line">
          <span>Taxes</span>
          <span id="taxes">₹0</span>
        </div>
        <div class="pricing-line total-line">
          <span>Total (INR)</span>
          <span id="total-price">₹<%= listing.price.toLocaleString("en-IN") %></span>
        </div>
      </div>

      <!-- Coupon Section -->
      <div class="coupon-section">
        <button type="button" class="coupon-toggle" id="coupon-toggle">
          <i class="fa-solid fa-tag"></i>
          <span>Add a coupon</span>
        </button>
        <div class="coupon-input-container" id="coupon-input-container" style="display: none;">
          <input type="text" id="couponCode" placeholder="Enter coupon code" class="coupon-input" autocomplete="off">
          <button type="button" class="coupon-apply-btn" id="coupon-apply-btn">Apply</button>
        </div>
        <div class="coupon-feedback" id="coupon-feedback"></div>
        <div id="coupon-suggestions" class="mt-2" style="display:none;"></div>
      </div>
    </form>

    <!-- Host Information -->
    <div class="host-info">
      <div class="host-avatar">
        <i class="fa-solid fa-user"></i>
      </div>
      <div class="host-details">
        <div class="host-name">Hosted by <%= listing.owner.username %></div>
        <div class="host-response-time">Responds within an hour</div>
      </div>
    </div>

    <!-- Safety Information -->
    <div class="safety-info">
      <div class="safety-item">
        <i class="fa-solid fa-shield-halved"></i>
        <span>Free cancellation before 3:00 PM on Jan 26</span>
      </div>
      <div class="safety-item">
        <i class="fa-solid fa-lock"></i>
        <span>Your payment information is always secure</span>
      </div>
    </div>
  </div>
</div>

