}

.amenity-item {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px 0;
}

.amenity-item i {
  font-size: 20px;
  color: #222;
  width: 24px;
}

.amenity-item span {
  font-size: 16px;
  color: #222;
}

.host-actions,
.login-prompt {
  border: 1px solid #dddddd;
  border-radius: 12px;
  padding: 24px;
  background: white;
  box-shadow: 0 6px 16px rgba(0, 0, 0, 0.12);
}

.host-actions h4,
.login-prompt h4 {
  font-size: 18px;
  font-weight: 600;
  margin-bottom: 16px;
  color: #222;
}

.login-prompt p {
  color: #717171;
  margin-bottom: 16px;
}

.price-display {
  padding: 16px;
  background: #f7f7f7;
  border-radius: 8px;
  text-align: center;
}

.price-amount-large {
  font-size: 24px;
  font-weight: 600;
  color: #222;
}

.price-period-small {
  font-size: 14px;
  color: #717171;
  margin-left: 4px;
}

